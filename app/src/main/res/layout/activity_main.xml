<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="@color/BackgroundColor"
    android:padding="30dp">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/welcome_text"
        android:textSize="25sp"
        android:textAlignment="center"
        android:fontFamily="@font/arial_rounded_mt_bold"
        android:letterSpacing="0.05"
        android:textColor="@color/TertiaryColor"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#D9D9D9"
        android:padding="190dp"
        android:layout_marginTop="25dp">

        <LinearLayout
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:background="@color/purple_200"
            android:elevation ="30dp"
            android:padding="10dp">
        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginStart="40dp"
        android:elevation="10dp"
        app:cardCornerRadius="50dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#117678"
        android:textAlignment="center" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/play_butt_text"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textAlignment="center"
            android:fontFamily="@font/arial_rounded_mt_bold"
            android:letterSpacing="0.05"
            android:textColor="@color/TertiaryColor"
            />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="40dp"
        android:elevation="10dp"
        app:cardCornerRadius="50dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/TertiaryColor"
            android:textAlignment="center" />

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/setting_text"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:textAlignment="center"
        android:fontFamily="@font/arial_rounded"
        android:layout_marginTop="20dp"/>

</LinearLayout>